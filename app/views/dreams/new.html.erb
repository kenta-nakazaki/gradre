<div class="">
    <div class="">
      <%= form_with(model: @dream, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <%= f.label :priority, 'Priority' %>
            <%= f.text_field :priority, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :deadline, 'Deadline' %>
            <%= f.text_field :deadline, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :category, 'Category' %>
            <%= f.text_field :category, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :status, 'Status' %>
            <%= f.text_field :status, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :content, 'Content' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
</div>