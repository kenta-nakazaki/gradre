<div class='card'>
  <div class="row">
    <div class="card-body col-sm-5">
      <div class="col-sm-12">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 250 }) %>" alt="">
      </div>
      <div class="card-header col-sm-12">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <%= render 'relationships/follow_button', user: @user %>
    </div>
    <div class="card-content col-sm-7">
      <p><%= @user.introduction %></p>
    </div>
  </div>
</div>
<div>
  <ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Dreams  <span class="badge badge-secondary"><%= @count_dreams %></span></a></li>
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
  </ul>
  <%= render 'dreams/dreams', dreams: @dreams %>
</div>
